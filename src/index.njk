---
layout: base
title: Home
---
{% from "partials/hero.njk" import hero %}
{% from "partials/cards.njk" import artworkCard %}
{{ hero(site) }}

<section class="container py-12">
  <h2 class="text-2xl font-bold mb-6">{{ site.latest_artworks_heading or 'Latest artworks' }}</h2>
  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% for post in collections.artworks | slice(0,6) %}
      {{ artworkCard(post) }}
    {% endfor %}
  </div>
</section>