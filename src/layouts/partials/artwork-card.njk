<article class="card overflow-hidden">
  <a href="{{ post.url }}" class="block group">
    {% if post.data.image %}
      {% optImg post.data.image, post.data.alt or post.data.title %}
    {% endif %}
    <div class="p-4">
      <span class="badge">{{ post.data.category }}</span>
      <h3 class="mt-2 font-semibold group-hover:underline transition">{{ post.data.title }}</h3>
    </div>
  </a>
</article>
